{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "no-unused-vars": "off",
    "no-console": "off",
    "prefer-const": "warn",
    "no-undef": "off"
  },
  "ignorePatterns": ["node_modules/", "dist/", "build/", "public/", "src/**/*"]
}
